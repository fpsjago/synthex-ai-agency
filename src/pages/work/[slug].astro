---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ReadingProgress from '../../components/ReadingProgress/ReadingProgress.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const caseStudies = await getCollection('case-studies');
  return caseStudies.map((cs) => ({
    params: { slug: cs.slug },
    props: { caseStudy: cs },
  }));
}

const { caseStudy } = Astro.props;
const { Content } = await caseStudy.render();
const base = import.meta.env.BASE_URL;

const date = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
});

const categoryColor: Record<string, string> = {
  'AI Workflow Automation': 'cyan',
  'LLM Integration': 'green',
  'Data Pipelines': 'cyan',
};
const color = categoryColor[caseStudy.data.category] || 'cyan';
---

<BaseLayout
  title={caseStudy.data.title}
  description={caseStudy.data.summary}
>
  <ReadingProgress />

  <!-- Case Study Hero -->
  <section class="cs-hero">
    <div class="container">
      <div class="cs-hero-meta">
        <a href={`${base}work/`} class="cs-back btn btn-ghost">
          ← All case studies
        </a>
        <span class={`cs-category label cs-category--${color}`}>{caseStudy.data.category}</span>
      </div>

      <div class="cs-hero-content">
        <div class="cs-hero-info">
          <div class="cs-client-info">
            <span class="label text-muted">Client</span>
            <span class="cs-client-name heading-md">{caseStudy.data.client}</span>
          </div>
          <div class="cs-client-info">
            <span class="label text-muted">Year</span>
            <span class="cs-client-name heading-md">{caseStudy.data.year}</span>
          </div>
        </div>

        <h1 class="cs-title display-2">{caseStudy.data.title}</h1>
        <p class="cs-summary body-lg text-muted">{caseStudy.data.summary}</p>

        <!-- Result chip -->
        <div class="cs-result-chip">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
            <path d="M5 10l4 4L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="body-lg">{caseStudy.data.result}</span>
        </div>

        <!-- Tags -->
        <div class="cs-tags">
          {caseStudy.data.tags.map((tag: string) => (
            <span class="cs-tag label">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Visual placeholder -->
  <div class="cs-cover-visual" aria-hidden="true">
    <div class="container">
      <div class="cs-cover-inner">
        <div class="cs-cover-grid" aria-hidden="true">
          <div class="cs-cover-metric">
            <span class="cs-cover-metric-val">60%</span>
            <span class="body-sm text-muted">Cost reduction</span>
          </div>
          <div class="cs-cover-metric">
            <span class="cs-cover-metric-val">14wk</span>
            <span class="body-sm text-muted">To production</span>
          </div>
          <div class="cs-cover-metric">
            <span class="cs-cover-metric-val">99.1%</span>
            <span class="body-sm text-muted">Accuracy</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Article Content -->
  <article class="cs-content">
    <div class="container cs-content-inner">
      <div class="cs-prose">
        <Content />
      </div>

      <!-- CTA -->
      <div class="cs-bottom-cta">
        <h2 class="heading-xl">Ready for results like these?</h2>
        <p class="body-lg text-muted">Let's talk about what AI can do for your specific situation.</p>
        <a href={`${base}contact/`} class="btn btn-primary" data-magnetic>
          Book a strategy call →
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .cs-hero {
    padding-top: calc(var(--nav-height) + var(--space-4xl));
    padding-bottom: var(--space-4xl);
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .cs-hero-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-3xl);
  }

  .cs-back {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .cs-category {
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
  }

  .cs-category--cyan {
    background: var(--color-cyan-dim);
    border: 1px solid var(--color-cyan-border);
    color: var(--color-cyan);
  }

  .cs-category--green {
    background: var(--color-green-dim);
    border: 1px solid rgba(57, 255, 20, 0.3);
    color: var(--color-green);
  }

  .cs-hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    max-width: 800px;
  }

  .cs-hero-info {
    display: flex;
    gap: var(--space-3xl);
  }

  .cs-client-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .cs-client-name {
    color: var(--color-text-primary);
  }

  .cs-title {
    line-height: 1.05;
  }

  .cs-summary {
    max-width: 60ch;
  }

  .cs-result-chip {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-green-dim);
    border: 1px solid rgba(57, 255, 20, 0.3);
    border-radius: var(--radius-lg);
    color: var(--color-green);
    max-width: fit-content;
  }

  .cs-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .cs-tag {
    padding: 0.25rem 0.625rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-tertiary);
    font-size: 0.7rem;
  }

  /* Cover visual */
  .cs-cover-visual {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-3xl) 0;
  }

  .cs-cover-inner {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    background: var(--color-surface);
    padding: var(--space-3xl);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 240px;
    position: relative;
  }

  .cs-cover-inner::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, var(--color-cyan-dim), transparent 70%);
    pointer-events: none;
  }

  .cs-cover-grid {
    display: flex;
    gap: var(--space-4xl);
    position: relative;
    z-index: 1;
  }

  .cs-cover-metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .cs-cover-metric-val {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.04em;
    background: linear-gradient(90deg, var(--color-cyan), var(--color-green));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Content */
  .cs-content {
    background: var(--color-bg);
    padding: var(--space-5xl) 0;
  }

  .cs-content-inner {
    max-width: 860px;
  }

  .cs-prose {
    /* Markdown styles */
  }

  :global(.cs-prose h2) {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: var(--space-3xl) 0 var(--space-lg);
    letter-spacing: -0.02em;
  }

  :global(.cs-prose h3) {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: var(--space-xl) 0 var(--space-md);
  }

  :global(.cs-prose p) {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  :global(.cs-prose ul, .cs-prose ol) {
    padding-left: var(--space-xl);
    margin-bottom: var(--space-lg);
  }

  :global(.cs-prose li) {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  :global(.cs-prose strong) {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  :global(.cs-prose table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-2xl) 0;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  :global(.cs-prose th) {
    padding: var(--space-md) var(--space-lg);
    background: var(--color-surface);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text-primary);
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  :global(.cs-prose td) {
    padding: var(--space-md) var(--space-lg);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  :global(.cs-prose tr:last-child td) {
    border-bottom: none;
  }

  :global(.cs-prose code) {
    font-family: var(--font-mono);
    font-size: 0.85em;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    padding: 0.15em 0.4em;
    border-radius: var(--radius-sm);
    color: var(--color-cyan);
  }

  /* Bottom CTA */
  .cs-bottom-cta {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    padding: var(--space-3xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    margin-top: var(--space-5xl);
  }

  @media (max-width: 768px) {
    .cs-hero-info {
      flex-direction: column;
      gap: var(--space-lg);
    }

    .cs-cover-grid {
      flex-direction: column;
      gap: var(--space-xl);
      align-items: center;
    }
  }
</style>
