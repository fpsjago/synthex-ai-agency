---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ReadingProgress from '../../components/ReadingProgress/ReadingProgress.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const base = import.meta.env.BASE_URL;

const date = new Date(post.data.publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
>
  <ReadingProgress />

  <!-- Article Hero -->
  <section class="blog-post-hero">
    <div class="container">
      <div class="blog-post-meta">
        <a href={`${base}blog/`} class="btn btn-ghost blog-back">
          ← All articles
        </a>
        <span class="blog-post-category label text-cyan">{post.data.category}</span>
      </div>

      <div class="blog-post-header">
        <h1 class="blog-post-title display-2">{post.data.title}</h1>
        <p class="blog-post-desc body-lg text-muted">{post.data.description}</p>

        <div class="blog-post-info">
          <div class="blog-author">
            <div class="blog-author-avatar">
              {post.data.author.charAt(0)}
            </div>
            <div>
              <p class="body-sm">{post.data.author}</p>
              <p class="body-sm text-muted">{date} · {post.data.readTime} min read</p>
            </div>
          </div>

          <div class="blog-post-tags">
            {post.data.tags.slice(0, 4).map((tag: string) => (
              <span class="blog-post-tag label">{tag}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Cover visual -->
  <div class="blog-cover" aria-hidden="true">
    <div class="container">
      <div class="blog-cover-inner">
        <div class="blog-cover-icon" aria-hidden="true">
          {post.data.category === 'Technical' && (
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="3"/><path d="M19.07 4.93a10 10 0 0 1 0 14.14M4.93 4.93a10 10 0 0 0 0 14.14"/>
            </svg>
          )}
          {post.data.category === 'Engineering' && (
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
            </svg>
          )}
          {post.data.category !== 'Technical' && post.data.category !== 'Engineering' && (
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          )}
        </div>
        <div class="blog-cover-glow"></div>
      </div>
    </div>
  </div>

  <!-- Article Content -->
  <article class="blog-article">
    <div class="container">
      <div class="blog-article-layout">
        <!-- Sidebar TOC placeholder -->
        <aside class="blog-toc" aria-label="Table of contents">
          <div class="blog-toc-inner">
            <p class="label text-muted">In this article</p>
            <nav class="blog-toc-links" id="toc-links">
              <!-- Populated by JS -->
            </nav>
          </div>
        </aside>

        <!-- Main content -->
        <div class="blog-prose">
          <Content />
        </div>
      </div>

      <!-- Bottom nav -->
      <div class="blog-bottom">
        <a href={`${base}blog/`} class="btn btn-secondary">
          ← Back to blog
        </a>
        <a href={`${base}contact/`} class="btn btn-primary" data-magnetic>
          Work with us →
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post-hero {
    padding-top: calc(var(--nav-height) + var(--space-4xl));
    padding-bottom: var(--space-4xl);
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-3xl);
  }

  .blog-back {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .blog-post-category {
    padding: 0.375rem 0.875rem;
    background: var(--color-cyan-dim);
    border: 1px solid var(--color-cyan-border);
    border-radius: var(--radius-full);
  }

  .blog-post-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    max-width: 800px;
  }

  .blog-post-title {
    line-height: 1.05;
  }

  .blog-post-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  .blog-author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .blog-author-avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-cyan), var(--color-green));
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: #0A0A0A;
    flex-shrink: 0;
  }

  .blog-post-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .blog-post-tag {
    padding: 0.2rem 0.5rem;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-tertiary);
    font-size: 0.65rem;
  }

  /* Cover */
  .blog-cover {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-3xl) 0;
  }

  .blog-cover-inner {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    min-height: 240px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .blog-cover-icon {
    font-size: 5rem;
    position: relative;
    z-index: 1;
  }

  .blog-cover-glow {
    position: absolute;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--color-cyan-dim), transparent 70%);
    border-radius: 50%;
  }

  /* Article */
  .blog-article {
    background: var(--color-bg);
    padding: var(--space-5xl) 0;
  }

  .blog-article-layout {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: var(--space-4xl);
    align-items: start;
  }

  /* TOC */
  .blog-toc {
    position: sticky;
    top: calc(var(--nav-height) + var(--space-xl));
  }

  .blog-toc-inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .blog-toc-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  :global(.blog-toc-links a) {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    line-height: 1.4;
  }

  :global(.blog-toc-links a:hover) {
    color: var(--color-cyan);
  }

  /* Prose */
  :global(.blog-prose h2) {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: var(--space-3xl) 0 var(--space-lg);
    letter-spacing: -0.02em;
  }

  :global(.blog-prose h3) {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: var(--space-xl) 0 var(--space-md);
  }

  :global(.blog-prose p) {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  :global(.blog-prose ul, .blog-prose ol) {
    padding-left: var(--space-xl);
    margin-bottom: var(--space-lg);
  }

  :global(.blog-prose li) {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  :global(.blog-prose strong) {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  :global(.blog-prose code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    padding: 0.15em 0.4em;
    border-radius: var(--radius-sm);
    color: var(--color-cyan);
  }

  :global(.blog-prose pre) {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    overflow-x: auto;
    margin: var(--space-xl) 0;
  }

  :global(.blog-prose pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-text-primary);
  }

  /* Bottom nav */
  .blog-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4xl);
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-4xl);
  }

  @media (max-width: 1024px) {
    .blog-article-layout {
      grid-template-columns: 1fr;
    }

    .blog-toc {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .blog-post-info {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script>
  function initTOC() {
    const prose = document.querySelector('.blog-prose');
    const tocLinks = document.getElementById('toc-links');
    if (!prose || !tocLinks) return;

    const headings = prose.querySelectorAll<HTMLElement>('h2, h3');

    headings.forEach((h, i) => {
      // Add ID if missing
      if (!h.id) {
        h.id = `heading-${i}`;
      }

      const link = document.createElement('a');
      link.href = `#${h.id}`;
      link.textContent = h.textContent || '';
      link.style.paddingLeft = h.tagName === 'H3' ? '0.75rem' : '0';
      tocLinks.appendChild(link);
    });
  }

  initTOC();
  document.addEventListener('astro:after-swap', initTOC);
</script>
