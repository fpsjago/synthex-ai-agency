---
interface Props {
  title: string;
  description: string;
  publishDate: string;
  author: string;
  category: string;
  slug: string;
  readTime: number;
  featured?: boolean;
  index?: number;
}

const { title, description, publishDate, author, category, slug, readTime, featured = false, index = 0 } = Astro.props;
const base = import.meta.env.BASE_URL;

const date = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a
  href={`${base}blog/${slug}/`}
  class={`blog-card ${featured ? 'blog-card--featured' : ''} js-reveal`}
  data-reveal="fade-up"
  data-delay={String(index * 0.1)}
>
  <div class="blog-card-visual" aria-hidden="true">
    <div class="blog-card-visual-inner">
      <span class="blog-card-category-icon">
        {category === 'Technical' ? '‚öôÔ∏è' : category === 'Engineering' ? 'üîß' : 'üí°'}
      </span>
    </div>
  </div>

  <div class="blog-card-content">
    <div class="blog-card-meta">
      <span class="blog-card-category label text-cyan">{category}</span>
      <span class="body-sm text-muted">{readTime} min read</span>
    </div>
    <h3 class="blog-card-title heading-md">{title}</h3>
    <p class="blog-card-desc body-sm text-muted">{description}</p>
    <div class="blog-card-footer">
      <span class="body-sm text-muted">{author}</span>
      <span class="body-sm text-muted">¬∑</span>
      <time class="body-sm text-muted" datetime={publishDate}>{date}</time>
    </div>
  </div>
</a>

<style>
  .blog-card {
    display: flex;
    flex-direction: column;
    gap: 0;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    transition: border-color var(--transition-base), transform var(--transition-base), box-shadow var(--transition-base);
  }

  .blog-card:hover {
    border-color: var(--color-cyan-border);
    transform: translateY(-3px);
    box-shadow: var(--shadow-cyan);
  }

  .blog-card--featured {
    grid-column: span 2;
    flex-direction: row;
  }

  /* Visual area */
  .blog-card-visual {
    aspect-ratio: 16/9;
    background: var(--color-bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
  }

  .blog-card--featured .blog-card-visual {
    aspect-ratio: auto;
    width: 45%;
    min-height: 260px;
  }

  .blog-card-visual::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, var(--color-cyan-dim), transparent 70%);
  }

  .blog-card-visual-inner {
    font-size: 3rem;
    position: relative;
    z-index: 1;
  }

  /* Content */
  .blog-card-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    flex: 1;
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
  }

  .blog-card-title {
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
    line-height: 1.3;
  }

  .blog-card:hover .blog-card-title {
    color: var(--color-cyan);
  }

  .blog-card-desc {
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card-footer {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .blog-card--featured {
      grid-column: span 1;
      flex-direction: column;
    }

    .blog-card--featured .blog-card-visual {
      width: 100%;
      aspect-ratio: 16/9;
    }
  }
</style>
