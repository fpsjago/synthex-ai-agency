---
const base = import.meta.env.BASE_URL;
const year = new Date().getFullYear();

const footerLinks = {
  Services: [
    { label: 'AI Workflow Automation', href: `${base}services/` },
    { label: 'LLM Integration', href: `${base}services/` },
    { label: 'Data Pipelines', href: `${base}services/` },
    { label: 'AI Strategy', href: `${base}services/` },
  ],
  Company: [
    { label: 'About', href: `${base}about/` },
    { label: 'Work', href: `${base}work/` },
    { label: 'Blog', href: `${base}blog/` },
    { label: 'Careers', href: `${base}about/` },
  ],
  Legal: [
    { label: 'Privacy Policy', href: `${base}` },
    { label: 'Terms of Service', href: `${base}` },
    { label: 'Cookie Policy', href: `${base}` },
  ],
};
---

<footer class="footer">
  <div class="container">
    <!-- Top section -->
    <div class="footer-top">
      <!-- Brand -->
      <div class="footer-brand">
        <a href={base} class="footer-logo" aria-label="Synthex">
          <span class="footer-logo-mark">SX</span>
          <span class="footer-logo-text">SYNTHEX</span>
        </a>
        <p class="footer-tagline body-md text-muted">
          We build AI systems that work. From strategy to deployment — your unfair competitive advantage.
        </p>
        <div class="footer-social">
          <a href="https://twitter.com" class="footer-social-link" aria-label="Twitter" target="_blank" rel="noopener">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="https://linkedin.com" class="footer-social-link" aria-label="LinkedIn" target="_blank" rel="noopener">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://github.com" class="footer-social-link" aria-label="GitHub" target="_blank" rel="noopener">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Links -->
      <div class="footer-links">
        {Object.entries(footerLinks).map(([category, links]) => (
          <div class="footer-col">
            <h4 class="footer-col-title label">{category}</h4>
            <ul class="footer-col-links">
              {links.map((link) => (
                <li>
                  <a href={link.href} class="footer-col-link body-sm">{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Newsletter -->
    <div class="footer-newsletter">
      <div class="footer-newsletter-text">
        <h3 class="heading-md">Stay ahead of the AI curve</h3>
        <p class="body-sm text-muted">Weekly insights on AI automation, LLMs, and what's actually working in production.</p>
      </div>
      <form class="footer-newsletter-form" onsubmit="return false;">
        <input
          type="email"
          placeholder="your@email.com"
          class="footer-newsletter-input"
          aria-label="Email address for newsletter"
          required
        />
        <button type="submit" class="btn btn-primary footer-newsletter-btn">Subscribe</button>
      </form>
    </div>

    <!-- Divider -->
    <div class="divider"></div>

    <!-- Bottom bar -->
    <div class="footer-bottom">
      <p class="body-sm text-muted">© {year} Synthex. All rights reserved.</p>
      <p class="body-sm text-muted footer-credit">
        Template by <a href="https://jagofps.dev" target="_blank" rel="noopener" class="footer-credit-link">jagoFps</a> → <a href="https://jagofps.dev" target="_blank" rel="noopener" class="footer-credit-link">jagofps.dev</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-4xl) 0 var(--space-xl);
  }

  /* Top */
  .footer-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-4xl);
    margin-bottom: var(--space-3xl);
  }

  /* Brand */
  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .footer-logo-mark {
    width: 2rem;
    height: 2rem;
    background: linear-gradient(135deg, var(--color-cyan), var(--color-green));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.7rem;
    color: #0A0A0A;
    letter-spacing: 0.05em;
  }

  .footer-logo-text {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.12em;
  }

  .footer-tagline {
    margin-bottom: var(--space-lg);
    max-width: 28ch;
  }

  .footer-social {
    display: flex;
    gap: var(--space-md);
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: border-color var(--transition-fast), color var(--transition-fast), background-color var(--transition-fast);
  }

  .footer-social-link:hover {
    border-color: var(--color-cyan-border);
    color: var(--color-cyan);
    background-color: var(--color-cyan-dim);
  }

  /* Links grid */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .footer-col-title {
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .footer-col-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-col-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-col-link:hover {
    color: var(--color-text-primary);
  }

  /* Newsletter */
  .footer-newsletter {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
    padding: var(--space-2xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-3xl);
  }

  .footer-newsletter-text h3 {
    margin-bottom: var(--space-xs);
  }

  .footer-newsletter-form {
    display: flex;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  .footer-newsletter-input {
    padding: 0.75rem 1rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border-strong);
    border-radius: var(--radius-full);
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 0.9rem;
    min-width: 240px;
    transition: border-color var(--transition-fast);
  }

  .footer-newsletter-input:focus {
    outline: none;
    border-color: var(--color-cyan);
  }

  .footer-newsletter-input::placeholder {
    color: var(--color-text-tertiary);
  }

  .footer-newsletter-btn {
    white-space: nowrap;
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-xl);
  }

  .footer-credit-link {
    color: var(--color-cyan);
    transition: opacity var(--transition-fast);
  }

  .footer-credit-link:hover {
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-top {
      grid-template-columns: 1fr;
      gap: var(--space-3xl);
    }

    .footer-newsletter {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-newsletter-form {
      width: 100%;
    }

    .footer-newsletter-input {
      flex: 1;
      min-width: 0;
    }
  }

  @media (max-width: 768px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom {
      flex-direction: column;
      gap: var(--space-sm);
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
